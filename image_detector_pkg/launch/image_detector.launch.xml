
<launch>
  <!-- Nodo de detección -->
  <node pkg="image_detector_pkg" exec="image_detector_node" name="image_detector_node" output="screen">

    <!-- Parámetros de topics -->
    <param name="input_topic" value="/camera/image_raw" />
    <param name="output_image_topic" value="/yolo/image" />
    <param name="human_detections_topic" value="/yolo/human_detections_2d" />
    <param name="car_detections_topic" value="/yolo/car_detections_2d" />

    <!-- Parámetros del modelo YOLO -->
    <param name="YOLO_model" value="yolov5su.pt" />
    <param name="YOLO_threshold" value="0.5" />
    <param name="device" value="cuda" />
  </node>
</launch>
